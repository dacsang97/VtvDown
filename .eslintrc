{
  "parser" : "babel-eslint",
  "extends" : "airbnb",
  "ecmaFeatures" : {
    "jsx" : true,
    "modules" : true
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "mocha" : true,
  },
  "rules" : {
    "semi" : [2, "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "arrow-body-style": ["error", "always"],
    "no-param-reassign": ["error", { "props": false }]
  },
  "plugins" : [
    "babel",
    "react"
  ]
}
